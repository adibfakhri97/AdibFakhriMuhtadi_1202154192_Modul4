<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adibf.adibfakhrimuhtadi_1202154192_m4.MainActivity">

    <Button
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="183dp"
        android:text="List Nama Mahasiswa"
        android:onClick="ListNama"/>

    <Button
        android:id="@+id/CariGambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/listView"
        android:layout_alignLeft="@+id/listView"
        android:layout_alignRight="@+id/listView"
        android:layout_alignStart="@+id/listView"
        android:layout_below="@+id/listView"
        android:layout_marginTop="42dp"
        android:text="Cari Gambar"
        android:onClick="CariGambar"/>

</RelativeLayout>
